<div class="head">
  <h2>Find Friends</h2>
  <div class="search-form">
    <%= form_tag "/users", method: 'GET' do %>
      <%= label_tag :search_by_name %>
      <%= text_field_tag :search_by_name, params[:search_by_name] %>
      <%= submit_tag 'Search' %>
    <%end%>
  </div>
</div>
<div class="users">
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</div>